package threadChat;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;

public class ConnectionListener extends Thread{
	private static ConnectionListener conn;
	private ServerSocket server;
	
	private ConnectionListener(ServerSocket server) {
		this.server = server;
		start();
	}
	
	public static ConnectionListener instance(ServerSocket server) {
		if(conn == null) {
			return new ConnectionListener(server);
		}
		return conn;
	}
	
	public void run() {
		try {
			Socket client = server.accept();
			// chamar addClient da classe Server
		}catch(IOException e) {
			e.printStackTrace();
		}
	}
}
